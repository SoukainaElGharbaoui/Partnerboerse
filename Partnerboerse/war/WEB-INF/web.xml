<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
    <servlet>
    <servlet-name>partnerboerseAdministrationServlet</servlet-name>
    <servlet-class>de.hdm.gruppe7.partnerboerse.server.PartnerboerseAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>partnerboerseAdministrationServlet</servlet-name>
    <url-pattern>/partnerboerse/partnerboerseadministration</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>loginService</servlet-name>
  <servlet-class>de.hdm.gruppe7.partnerboerse.server.LoginServiceImpl</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>loginService</servlet-name>
  <url-pattern>/login</url-pattern>
</servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Partnerboerse.html</welcome-file>
  </welcome-file-list>

</web-app>
